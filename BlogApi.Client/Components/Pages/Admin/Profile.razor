    // Profile data
    private string fullName = "John Developer";

    private string bio = "Passionate developer sharing knowledge about .NET, Blazor, and modern web development. Always learning, always building.";
    private string location = "San Francisco, CA";

    // Backup for cancel functionality
    private string fullNameBackup = "";
    private string emailBackup = "";
