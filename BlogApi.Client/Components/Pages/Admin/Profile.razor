@page "/profile"
@rendermode InteractiveServer
@inject IPostClientService PostClient
@inject IUserClientServices UserClient

<main class="p-6 lg:p-12 max-w-7xl w-full mx-auto h-screen overflow-auto">
    <div class="-mb-12">

        <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl p-8 mb-8 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -mr-32 -mt-32"></div>
            <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full -ml-24 -mb-24"></div>

            <div class="relative flex flex-col md:flex-row items-center md:items-start gap-6">
                <div class="relative group">
                    <div class="border-2 border-white rounded-full w-32 h-32 overflow-hidden flex-shrink-0 shadow-xl">
                        @if (UserInfo.ProfilePhoto is null)
                        {
                            <img src="/img/prof-icon.png" class="w-full h-full object-cover" alt="Profile" />
                        }
                        else
                        {
                            <img src="@UserInfo.ProfilePhoto" class="w-full h-full object-cover" alt="Profile" />
                        }
                    </div>
                    @if (isEditMode)
                    {
                        <label for="profile-photo-input" class="absolute bottom-0 right-0 cursor-pointer bg-white text-indigo-600 rounded-full p-3 shadow-lg hover:bg-indigo-50 transition-all hover:scale-110">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </label>
                        <InputFile id="profile-photo-input"
                                   OnChange="HandleProfilePhotoSelected"
                                   accept="image/*"
                                   class="hidden" />
                    }
                </div>

                <div class="flex-1 text-center md:text-left text-white">
                    <div class="flex flex-col md:flex-row items-center gap-4 mb-3">
                        @if (!isEditMode)
                        {
                            <h1 class="text-3xl font-bold">@UserInfo.FullName</h1>
                            <button @onclick="ToggleEditMode" class="bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg text-sm font-semibold transition-all flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                </svg>
                                Edit Profile
                            </button>
                        }
                        else
                        {
                            <input @bind="UpdateInfo.FullName" type="text" class="text-lg font-bold bg-white/20 backdrop-blur-sm border-2 border-white/40 rounded-lg px-4 py-2 text-white placeholder-white/70 focus:outline-none focus:border-white" placeholder="Full Name" />
                        }
                    </div>

                    @if (!isEditMode)
                    {
                        <p class="text-white/90 mb-4 max-w-2xl">@UserInfo.Bio</p>
                    }
                    else
                    {
                        <textarea @bind="UpdateInfo.Bio" rows="2" class="w-full max-w-2xl bg-white/20 backdrop-blur-sm border-2 border-white/40 rounded-lg px-4 py-2 text-white placeholder-white/70 focus:outline-none focus:border-white mb-4" placeholder="Tell us about yourself..."></textarea>
                    }

                    <div class="flex flex-wrap gap-6 text-sm justify-center md:justify-start ">
                        <div class="flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            <span><strong>@Stats?.TotalPosts</strong> Posts</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <span><strong>15.3k</strong> Views</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <span>Joined <strong>@UserInfo.CreatedAt.ToString("MMMM dd,yyyy")</strong></span>
                        </div>

                        @if (isEditMode)
                        {

                            <div class="flex gap-4 mt-4 ">
                                <button @onclick="() => HandleUpdate()" class="btn cursor-pointer bg-white text-indigo-600 px-6 py-2 rounded-lg font-semibold text-sm transition-all hover:shadow-lg hover:bg-white/90 flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    Save Changes
                                </button>
                                <button @onclick="CancelEdit" class="bg-white/20 hover:bg-white/30 text-white px-6 py-2 rounded-lg font-semibold text-sm transition-all">
                                    Cancel
                                </button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>



        @if (Stats is null)
        {
            <h1>Loading...</h1>
        }
        else
        {

            <div class="mb-8">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold text-gray-800">My Posts</h2>
                    <div class="flex gap-2">
                        <button class="px-4 py-2 bg-indigo-100 text-indigo-600 rounded-lg font-semibold text-sm hover:bg-indigo-200 transition-all">
                            All (@Stats.TotalPosts)
                        </button>
                        <button class="px-4 py-2 bg-gray-100 text-gray-600 rounded-lg font-semibold text-sm hover:bg-gray-200 transition-all">
                            Published (@Stats.PublishedPosts)
                        </button>
                        <button class="px-4 py-2 bg-gray-100 text-gray-600 rounded-lg font-semibold text-sm hover:bg-gray-200 transition-all">
                            Drafts (@Stats.DraftPosts)
                        </button>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @if (Posts is not null)
                    {
                        foreach (var post in Posts.Items)
                        {

                            <article class="bg-white rounded-2xl p-6 border border-gray-200 hover:-translate-y-1 hover:shadow-xl hover:border-indigo-600 transition-all cursor-pointer relative group">
                                <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity flex gap-2">
                                    <button class="bg-indigo-100 hover:bg-indigo-200 text-indigo-600 p-2 rounded-lg">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                        </svg>
                                    </button>
                                    <button class="bg-red-100 hover:bg-red-200 text-red-600 p-2 rounded-lg">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </div>

                                <div class="flex justify-between items-center mb-4">
                                    <span class="bg-blue-50 text-blue-600 px-3 py-1.5 rounded-md text-xs font-semibold uppercase">@post.CategoryName</span>
                                    <span class="text-sm text-gray-600">Dec 18, 2025</span>
                                </div>
                                <h3 class="text-xl font-bold line-clamp-2 mb-3 text-gray-700 leading-snug">
                                    @post.Title
                                </h3>
                                <div class="prose prose-sm max-w-none line-clamp-3 mb-4 [&_*]:!text-sm">
                                    @((MarkupString)post.Content!)
                                </div>
                                <div class="flex justify-between items-center pt-4 border-t border-gray-200">
                                    <div class="flex items-center gap-4 text-sm text-gray-600">
                                        <span>⏱️  @post.readingDuration.GetDisplayName()</span>
                                        <span>👁️ 1.2k</span>
                                    </div>
                                    <span class="@(post.Status == Domain.Enums.EntityEnum.Status.Published ? "text-green-600" : "text-amber-600")  font-semibold text-xs flex items-center gap-1">
                                        @if (post.Status == Domain.Enums.EntityEnum.Status.Published)
                                        {
                                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                            </svg>
                                        }
                                        else
                                        {
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        }
                                        @post.Status
                                    </span>
                                </div>
                            </article>
                        }
                    }
                    else
                    {
                        <h1>No post yet</h1>
                    }

                </div>
            </div>
        }
    </div>
</main>

@code {
    private bool hasrender = false;
    private StatisticsDto? Stats { get; set; } = new StatisticsDto();
    private UserInfoDto UserInfo { get; set; } = new UserInfoDto();
    private UserInfoRequest UpdateInfo { get; set; } = new UserInfoRequest();
    public PagedResult<PostDto>? Posts { get; set; } = new PagedResult<PostDto>();
    public ListForAdminPostsRequest Pagination { get; set; } = new ListForAdminPostsRequest();
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!hasrender && firstRender)
        {
            hasrender = true;
            await ListForAdmin();
            await GetStatistics();
            var userinfo = await UserClient.GetUserInfo();
            if (userinfo.Value is not null)
                UserInfo = userinfo.Value;
        }
        StateHasChanged();
    }
    
    private async Task HandleUpdate()
    {
        await UserClient.UpdateUserInfo(UpdateInfo);
        var userinfo = await UserClient.GetUserInfo();
        if (userinfo.Value is not null)
            UserInfo = userinfo.Value;
        isEditMode = false;
        StateHasChanged();
    }

    private async Task HandleProfilePhotoSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;

        if (file != null)
        {

            if (file.Size > 5 * 1024 * 1024)
            {
                return;
            }
            using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);

            var buffer = ms.ToArray();

            UpdateInfo.PhotoContentType = file.ContentType;
            UpdateInfo.Photo = buffer;
            var imageData = $"data:{UpdateInfo.PhotoContentType};base64,{Convert.ToBase64String(UpdateInfo.Photo)}";
            UserInfo.ProfilePhoto = imageData;
            StateHasChanged();
        }
    }

    public async Task ListForAdmin()
    {
        var post = await PostClient.ListForAdmin(Pagination);
        if (post.StatusCode == 204)
        {
            Posts = null;
        }
        else
        {
            Posts = post.Value;
        }
    }
    public async Task GetStatistics()
    {
        var stats = await PostClient.GetStatistics();
        if (stats?.StatusCode == 204)
        {
            Stats = null;
        }
        else
        {
            Stats = stats?.Value;
        }
    }










