    private void ToggleEditMode()
    {
        if (!isEditMode)
        {
            // Entering edit mode - backup current values
            fullNameBackup = fullName;

            bioBackup = bio;
            locationBackup = location;
        }
        isEditMode = !isEditMode;
    }

    private void SaveChanges()
    {
        // Save logic here
        isEditMode = false;
    }

    private void CancelEdit()
    {
        // Restore backup values
        fullName = fullNameBackup;

        bio = bioBackup;
        location = locationBackup;

        isEditMode = false;
    }
}