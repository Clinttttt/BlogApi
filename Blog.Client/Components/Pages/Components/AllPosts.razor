@* AllPosts.razor *@

@if (isLoading)
{
    <div class="space-y-6">
        @for (int i = 0; i < 3; i++)
        {
            <article class="bg-white rounded-2xl shadow-sm overflow-hidden border border-gray-100 animate-pulse">
                <div class="relative w-full h-80 bg-gray-200"></div>
                <div class="p-6 lg:p-8">
                    <div class="flex items-start justify-between mb-4">
                        <div class="h-10 bg-gray-200 rounded w-3/4"></div>
                        <div class="h-6 bg-gray-200 rounded w-24 flex-shrink-0 ml-4"></div>
                    </div>
                    <div class="flex items-center gap-6 text-sm mb-5 pb-5 border-b border-gray-100">
                        <div class="flex items-center gap-2">
                            <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
                            <div class="h-4 bg-gray-200 rounded w-24"></div>
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="w-4 h-4 bg-gray-200 rounded"></div>
                            <div class="h-4 bg-gray-200 rounded w-20"></div>
                        </div>
                    </div>
                    <div class="space-y-2 mb-6">
                        <div class="h-4 bg-gray-200 rounded w-full"></div>
                        <div class="h-4 bg-gray-200 rounded w-5/6"></div>
                        <div class="h-4 bg-gray-200 rounded w-4/6"></div>
                    </div>
                    <div class="flex flex-wrap gap-2 mb-6">
                        @for (int j = 0; j < 4; j++)
                        {
                            <div class="h-8 bg-gray-200 rounded-lg w-20"></div>
                        }
                    </div>
                    <div class="flex items-center justify-between pt-5 border-t border-gray-100">
                        <div class="flex items-center gap-6">
                            <div class="h-6 bg-gray-200 rounded w-16"></div>
                            <div class="h-6 bg-gray-200 rounded w-16"></div>
                        </div>
                        <div class="h-12 bg-gray-200 rounded-xl w-32"></div>
                    </div>
                </div>
            </article>
        }
    </div>
}
else if (recentPost?.Items?.Any() == true)
{
    <div class="space-y-6 mb-6">
        @foreach (var post in recentPost.Items)
        {
            <article class="bg-white rounded-2xl shadow-sm overflow-hidden hover:shadow-xl transition-all duration-300 border border-gray-100">
                @if (!string.IsNullOrEmpty(post.Preview))
                {
                    <div class="relative w-full h-80 overflow-hidden group cursor-pointer">
                        <img src="@post.Preview"
                             class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
                        <div class="absolute top-4 left-4">
                            <span class="inline-block bg-white/90 backdrop-blur-sm text-indigo-600 px-4 py-2 rounded-full text-sm font-bold shadow-lg">
                                @post.CategoryName
                            </span>
                        </div>
                    </div>
                }

                <div class="p-6 lg:p-8">
                    @if (string.IsNullOrEmpty(post.Preview))
                    {
                        <div class="flex items-center justify-between mb-4">
                            <span class="inline-block bg-indigo-100 text-indigo-600 px-4 py-2 rounded-full text-sm font-bold">
                                @post.CategoryName
                            </span>
                            <span class="text-sm text-gray-500 font-medium">@post.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4 leading-tight cursor-pointer">
                            @post.Title
                        </h2>
                    }
                    else
                    {
                        <div class="flex items-start justify-between mb-4">
                            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 leading-tight cursor-pointer flex-1 mr-4">
                                @post.Title
                            </h2>
                            <span class="text-sm text-gray-500 font-medium flex-shrink-0">
                                @post.CreatedAt.ToString("MMM dd, yyyy")
                            </span>
                        </div>
                    }

                    <div class="flex items-center gap-6 text-sm text-gray-600 mb-5 pb-5 border-b border-gray-100">
                        <div class="flex items-center gap-2">
                            <div class="w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                            </div>
                            <span class="font-semibold text-gray-700">@post.Author</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span>@post.readingDuration.GetDisplayName()</span>
                        </div>
                    </div>

                    <div class="prose prose-sm max-w-none line-clamp-3 mb-6 text-gray-600 [&_*]:!text-sm">
                        @((MarkupString)post.Content!)
                    </div>

                    @if (post.Tags?.Any() == true)
                    {
                        <div class="flex flex-wrap gap-2 mb-6">
                            @foreach (var tag in post.Tags.Take(5))
                            {
                                <span class="bg-gray-100 hover:bg-indigo-50 px-3 py-1.5 rounded-lg text-sm font-medium text-gray-700 hover:text-indigo-600 transition-colors cursor-pointer">
                                    #@tag.Name
                                </span>
                            }
                            @if (post.Tags.Count > 5)
                            {
                                <span class="bg-gray-100 px-3 py-1.5 rounded-lg text-sm font-medium text-gray-500">
                                    +@(post.Tags.Count - 5) more
                                </span>
                            }
                        </div>
                    }

                    <div class="flex items-center justify-between pt-5 border-t border-gray-100">
                        <div class="flex items-center gap-6 text-sm">
                            <button @onclick="() => ToggleLikePost(post.Id)" class="flex items-center gap-2 hover:text-red-500 transition-colors group">
                                <svg class="w-5 h-5 @(post.PhotoIsliked ? "fill-red-500 text-red-500" : "text-gray-400 group-hover:text-red-500")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                                <span class="font-semibold text-gray-700">@post.PostLike</span>
                            </button>
                            <button @onclick="() => HandleReadMore(post.Id)" class="btn flex items-center gap-2 text-gray-600 hover:text-indigo-600 transition-colors">
                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                </svg>
                                <span class="font-semibold text-gray-700">@post.CommentCount</span>
                            </button>
                        </div>

                        <NavLink href="@($"viewblogconstruct/{post.Id}")" class="flex items-center gap-2 px-6 py-3 bg-indigo-600 text-white rounded-xl font-semibold hover:bg-indigo-700 hover:shadow-lg hover:-translate-y-0.5 transition-all group">
                            Read More
                            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </NavLink>
                    </div>
                </div>
            </article>
        }
    </div>

   
    <Pagination CurrentPage="@Pagination.PageNumber"
                TotalCount="@recentPost.TotalCount"
                PageSize="@Pagination.PageSize"
                OnPageChanged="HandlePageChanged" />
}
else
{
    <div class="bg-white rounded-2xl shadow-sm p-12 text-center">
        <svg class="w-20 h-20 text-gray-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="text-2xl font-bold text-gray-900 mb-2">No posts found</h3>
        <p class="text-gray-600 mb-6">Start creating amazing content for your readers</p>
        <button class="inline-flex items-center gap-2 px-6 py-3 bg-indigo-600 text-white rounded-xl font-semibold hover:bg-indigo-700 transition-colors shadow-lg hover:shadow-xl">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Create Your First Post
        </button>
    </div>
}

@code {
    private bool isLoading = true;

    public TogglePostLikeRequest Id { get; set; } = new TogglePostLikeRequest();

    [Parameter]
    public PagedResult<PostDto>? recentPost { get; set; } = new PagedResult<PostDto>();

    [Parameter]
    public ListPaginatedRequest Pagination { get; set; } = new ListPaginatedRequest();

    [Parameter]
    public EventCallback<bool> Refresh { get; set; }

    protected override void OnParametersSet()
    {
        isLoading = recentPost == null || !recentPost.Items?.Any() == true;
    }

    public async Task ToggleLikePost(int? PostId)
    {
        Id.PostId = PostId;
        await PostClient.ToggleLikePost(Id);
        await Refresh.InvokeAsync();
        StateHasChanged();
    }

    private async Task HandlePageChanged(int newPage)
    {
        Pagination.PageNumber = newPage;
        await Refresh.InvokeAsync();
    }

    public async Task HandleReadMore(int? PostId)
    {
        await PostClient.TrackPostView(PostId);
        Navigation.NavigateTo($"viewblogconstruct/{PostId}");
        StateHasChanged();
    }
}