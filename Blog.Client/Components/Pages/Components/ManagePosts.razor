
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @if (allLoadedPosts.Any())
    {
        foreach (var post in allLoadedPosts)
        {

            <NavLink href="@($"viewblogconstruct/{post.Id}")" class="bg-white rounded-2xl p-6 border border-gray-200 hover:-translate-y-1 hover:shadow-xl hover:border-indigo-600 transition-all cursor-pointer relative group">
                <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity flex gap-2">
                    <button @onclick:stopPropagation="true"
                            @onclick:preventDefault="true"
                            @onclick="() => ToggleFeatured(post.Id)"
                            class="@(post.IsFeatured ? "bg-indigo-600 hover:bg-indigo-700" : "bg-indigo-100 hover:bg-indigo-200")
                       @(post.IsFeatured ? "text-white" : "text-indigo-600")
                       p-2 rounded-lg cursor-pointer transition-colors">
                        <svg class="w-4 h-4"
                             fill="@(post.IsFeatured ? "currentColor" : "none")"
                             stroke="currentColor"
                             viewBox="0 0 24 24">
                            <path stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                        </svg>
                    </button>

                    <button @onclick="() => UpdateModal(post.Id, post.CategoryId, post.Tags)"
                            @onclick:stopPropagation="true"
                            @onclick:preventDefault="true"
                            class="cursor-pointer bg-indigo-100 hover:bg-indigo-200 text-indigo-600 p-2 rounded-lg">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                        </svg>
                    </button>

                    <button @onclick="() => DeletePost(post.Id)"
                            @onclick:stopPropagation="true"
                            @onclick:preventDefault="true"
                        class=" bg-red-100 hover:bg-red-200 text-red-600 p-2 rounded-lg">
                        <svg class="w-4 h-4 cursor-pointer" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </button>
                </div>

                <div class="flex justify-between items-center mb-4">
                    <span class="bg-blue-50 text-blue-600 px-3 py-1.5 rounded-md text-xs font-semibold uppercase">@post.CategoryName</span>
                    <span class="text-sm text-gray-600">Dec 18, 2025</span>
                </div>
                <h3 class="text-xl font-bold line-clamp-2 mb-3 text-gray-700 leading-snug">
                    @post.Title
                </h3>
                <div class="prose prose-sm max-w-none line-clamp-3 mb-4 [&_*]:!text-sm">
                    @((MarkupString)post.Content!)
                </div>
                <div class="flex justify-between items-center pt-4 border-t border-gray-200">
                    <div class="flex items-center gap-4 text-sm text-gray-600">
                        <span>⏱️  @post.readingDuration.GetDisplayName()</span>
                        <span>👁️ 1.2k</span>
                    </div>
                    <span class="@(post.Status == Status.Published ? "text-indigo-600" : "text-amber-600")  font-semibold text-xs flex items-center gap-1">

                        @post.Status
                    </span>
                </div>
            </NavLink>
        }
    }
    else
    {
        <div class="col-span-full text-center py-12">
            <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="text-lg font-semibold text-gray-700 mb-2">No posts yet</h3>
            <p class="text-gray-500 text-sm">Start creating your first blog post!</p>
        </div>
    }

</div>

@if (HasMorePost)
{
    <div class="text-center mt-8">
        <p class="text-sm text-slate-600 mb-4 font-medium">
            Showing <span class="text-indigo-600 font-semibold">@allLoadedPosts.Count</span> of <span class="text-indigo-600 font-semibold">@(ListPostFilterByUser?.TotalCount ?? 0)</span> posts
        </p>
        <button @onclick="LoadMorePost"
                disabled="@IsloadingMore"
                class="px-8 py-3 bg-white text-slate-700 rounded-xl font-medium hover:bg-slate-50 transition-all shadow-sm border border-slate-200 hover:shadow disabled:opacity-50 disabled:cursor-not-allowed">
            @if (IsloadingMore)
            {
                <span class="flex items-center gap-2">
                    <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    Loading...
                </span>
            }
            else
            {
                <span>Load More Posts</span>
            }
        </button>
    </div>
}
else if (allLoadedPosts.Any())
{
    <div class="text-center mt-5 py-6">
        <div class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-xl">
            <span class="text-2xl">✓</span>
            <p class="text-slate-700 font-medium">
                You're all caught up! All <span class="text-indigo-600 font-semibold">@(ListPostFilterByUser?.TotalCount ?? 0)</span> posts loaded.
            </p>
        </div>
    </div>
}



<UpdatePost PostId="PostId" CategoryId="CategoryId" Tags="Tags" Refresh="ManageRefreshPost" />


@code {

    [Parameter]
    public EventCallback<bool> Refresh { get; set; }

    [Parameter]
    public ListPaginatedRequest Pagination { get; set; } = new ListPaginatedRequest();

    [Parameter]
    public PagedResult<PostDto>? ListPostFilterByUser { get; set; } = new PagedResult<PostDto>();

    [Parameter]
    public EventCallback OnLoadMore { get; set; }

    [Parameter]
    public EventCallback RefreshFeaturedAsync { get; set; }

    private bool HasMorePost => ListPostFilterByUser != null && Pagination.PageNumber < ListPostFilterByUser.TotalPages;
    public bool IsloadingMore = false;
    private bool isFeatured = false;

    public List<TagDto>? Tags { get; set; }
    private List<PostDto> allLoadedPosts = new List<PostDto>();
    private DeletePostRequest delete { get; set; } = new DeletePostRequest();
    private AddFeaturedRequest FeaturedRequest { get; set; } = new AddFeaturedRequest();

    public int? PostId { get; set; }
    public int? CategoryId { get; set; }





    private async Task ToggleFeatured(int? PostId)
    {
       
        var post = allLoadedPosts.FirstOrDefault(p => p.Id == PostId);
        if (post != null)
        {
           
            post.IsFeatured = !post.IsFeatured;
            StateHasChanged();
        }
   
        FeaturedRequest.PostId = PostId;
        await FeaturedClient.AddFeatured(FeaturedRequest);

        LoadAll();
        await RefreshFeaturedAsync.InvokeAsync();
        StateHasChanged();
    }


    protected override void OnParametersSet()
    {
        LoadAll();
    }

    public void LoadAll()
    {
        if (ListPostFilterByUser?.Items != null)
        {
            foreach (var post in ListPostFilterByUser.Items)
            {

                if (!allLoadedPosts.Any(p => p.Id == post.Id))
                {
                    allLoadedPosts.Add(post);
                }
            }
        }
    }

    public async Task UpdateModal(int? PostId, int? CategoryId, List<TagDto>? Tags)
    {
        this.PostId = PostId;
        this.CategoryId = CategoryId;
        this.Tags = Tags;
        await JS.InvokeVoidAsync("eval", "document.getElementById('update_post').checked = true");
        StateHasChanged();
    }
    public async Task DeletePost(int? PostId)
    {
        delete.PostId = PostId;
        await PostClient.Delete(delete);
        await Refresh.InvokeAsync();
        var del = allLoadedPosts.FirstOrDefault(s => s.Id == PostId);
        if (del is not null)
        {
            allLoadedPosts.Remove(del);
        }
        StateHasChanged();
    }

    public async Task ManageRefreshPost()
    {      
       
         await Refresh.InvokeAsync();
         allLoadedPosts.Clear();
         await Refresh.InvokeAsync();
        StateHasChanged();
    }

    public async Task LoadMorePost()
    {
        if (!HasMorePost || IsloadingMore) return;

        IsloadingMore = true;
        StateHasChanged();

        Pagination.PageNumber++;
        await OnLoadMore.InvokeAsync();

        IsloadingMore = false;
        StateHasChanged();
    }

}