@page "/admin_home"


<main class="p-6 lg:p-8 max-w-7xl w-full overflow-auto h-screen ">

    <header class="flex flex-col lg:flex-row justify-between items-start gap-4 mb-6 pb-4 border-b border-gray-200">
        <div>
            <h1 class="text-2xl lg:text-3xl font-semibold text-gray-800 mb-2">Developer Learning Journal</h1>
            <p class="text-base text-gray-600">Sharing my journey through .NET, Blazor, and Modern Web Development</p>
        </div>
        <div class="flex gap-3 items-center">
            @if (!hasrender)
            {
                <div class="skeleton w-10 h-10 rounded-full flex-shrink-0"></div>
            }
            else
            {
                <NavLink href="profile" class="flex-shrink-0 cursor-pointer border-2 rounded-full border-gray-300 hover:border-indigo-500 w-10 h-10 overflow-hidden transition-all">
                    @if (userProfile?.PhotoUrl is null)
                    {
                        <img src="/img/icon-proff.png" class="w-full h-full object-contain" />
                    }
                    else
                    {
                        <img src="@userProfile.PhotoUrl" class="w-full h-full object-cover" />
                    }
                </NavLink>
            }

            <NavLink href="bookmark" class="btn btn-ghost btn-square bg-indigo-50 hover:bg-indigo-50">
                <svg class="w-6 h-6 text-indigo-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.4" d="m17 21-5-4-5 4V3.889a.92.92 0 0 1 .244-.629.808.808 0 0 1 .59-.26h8.333a.81.81 0 0 1 .589.26.92.92 0 0 1 .244.63V21Z" />
                </svg>
            </NavLink>

            <div class="indicator">
                <span class="indicator-item badge bg-indigo-500 text-white">2</span>
                <button class="px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 font-medium text-sm hover:bg-gray-50 transition-all">
                    Approval
                </button>
            </div>
        </div>
    </header>

    <div class="flex flex-col lg:flex-row gap-2 mb-6 justify-between">

        <div class="flex flex-row items-center gap-3 ">
         
            <div class="flex gap-2 flex-row">
                <button class="px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 font-medium text-sm hover:bg-gray-50 transition-all">
                    All Posts
                </button>
                <button class="px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 font-medium text-sm hover:bg-gray-50 transition-all">
                    Published
                </button>
                <button class="px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 font-medium text-sm hover:bg-gray-50 transition-all">
                    Draft
                </button>
                <div class="dropdown dropdown-bottom">
                    <button tabindex="0" class="btn btn-outline gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        Author
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow-lg border border-gray-200">
                        <li><a>All Authors</a></li>
                        <li><a>John Doe</a></li>
                        <li><a>Jane Smith</a></li>
                    </ul>
                </div>
                <button class="btn btn-outline gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    Overview
                </button>
            </div>
        </div>

        <div class="flex gap-2 min-w-0 flex-shrink">
            <label class="input input-bordered flex items-center gap-2 w-[100%]">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                <input type="text" class="w-[100%]" placeholder="Search posts..." />
            </label>
            <NavLink href="admin/create-blog" class="btn text-white bg-indigo-500 gap-2 whitespace-nowrap">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                New Post
            </NavLink>
        </div>
    </div>

    @if (featuredPosts is null)
    {
        <div class="col-span-full text-center py-12">
            <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="text-lg font-semibold text-gray-700 mb-2">No featured yet</h3>
            <p class="text-gray-500 text-sm">Start adding your first featured post!</p>
        </div>
    }
    else if (!featuredPosts.Any())
    {
        <section class="relative overflow-hidden bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl p-8 lg:p-12 mb-8 shadow-xl">
            <div class="skeleton h-8 w-24 rounded-full mb-6 bg-white/20"></div>
            <div class="skeleton h-10 w-3/4 mb-4 bg-white/20"></div>
            <div class="skeleton h-10 w-1/2 mb-4 bg-white/20"></div>
            <div class="skeleton h-4 w-full mb-2 bg-white/20"></div>
            <div class="skeleton h-4 w-full mb-2 bg-white/20"></div>
            <div class="skeleton h-4 w-2/3 mb-6 bg-white/20"></div>
            <div class="flex flex-wrap gap-6 mb-8">
                <div class="skeleton h-4 w-32 bg-white/20"></div>
                <div class="skeleton h-4 w-24 bg-white/20"></div>
                <div class="skeleton h-4 w-28 bg-white/20"></div>
            </div>
            <div class="skeleton h-12 w-40 rounded-lg bg-white/30"></div>
        </section>
    }
    else
    {
        <div class="relative mb-8">
         
            @if (featuredPosts.Count > 1)
            {
                <button @onclick="ScrollLeft"
                        class="absolute left-4 top-1/2 -translate-y-1/2 z-10 bg-white/90 hover:bg-white p-3 rounded-full shadow-lg transition-all hover:scale-110">
                    <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </button>
                <button @onclick="ScrollRight"
                        class="absolute right-4 top-1/2 -translate-y-1/2 z-10 bg-white/90 hover:bg-white p-3 rounded-full shadow-lg transition-all hover:scale-110">
                    <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </button>
            }

       
            <div @ref="carouselContainer" class="flex gap-6 overflow-x-auto scroll-smooth snap-x snap-mandatory hide-scrollbar pb-2">
                @foreach (var featuredPost in featuredPosts)
                {
                    <section class="relative flex-shrink-0 w-full overflow-hidden bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl p-8 lg:p-12 text-white shadow-xl snap-start">
                        <div class="inline-block bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-xs font-bold uppercase tracking-wider mb-6">
                            Featured
                        </div>
                        <h2 class="text-3xl lg:text-4xl font-bold mb-4 leading-tight">
                            @featuredPost.Title
                        </h2>
                        <p class="text-lg leading-relaxed line-clamp-3 opacity-95 mb-6 max-w-3xl [&_*]:!text-md [&_*]:!text-white">
                            @((MarkupString)featuredPost.Content!)
                        </p>
                        <div class="flex flex-wrap gap-6 mb-8 text-sm opacity-90">
                            <span class="flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                @featuredPost.CreatedAt.ToString("MMMM dd, yyyy")
                            </span>
                            <span class="flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                @featuredPost.ReadingDuration.GetDisplayName()
                            </span>
                            <span class="flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                                3 views
                            </span>
                        </div>
                        <NavLink href="@($"viewblogconstruct/{featuredPost.PostId}")" class="inline-flex items-center gap-2 bg-white text-indigo-600 px-6 py-3 rounded-lg font-semibold text-base hover:-translate-y-0.5 hover:shadow-lg transition-all">
                            Read Article
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </NavLink>
                    </section>
                }
            </div>

          
            @if (featuredPosts.Count > 1)
            {
                <div class="flex justify-center gap-2 mt-4">
                    @for (int i = 0; i < featuredPosts.Count; i++)
                    {
                        int index = i;
                        <button @onclick="() => ScrollToSlide(index)"
                                class="w-2 h-2 rounded-full transition-all @(currentSlide == index ? "bg-indigo-600 w-8" : "bg-gray-300 hover:bg-gray-400")">
                        </button>
                    }
                </div>
            }
        </div>
    }

    <section class="pt-6 border-t border-gray-200">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold text-gray-800">Recent Posts</h2>
            <button class="text-sm text-indigo-600 hover:text-indigo-700 font-medium">View all →</button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-6">
            @if (recentPost is null )
            {
                <div class="col-span-full text-center py-12">
                    <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">No recent posts yet</h3>
                    <p class="text-gray-500 text-sm">Start creating your first blog post!</p>
                </div>
            }
            else if(!recentPost.Items.Any())
            {
  
                @for (int i = 0; i < 3; i++)
                {
                    <article class="bg-white rounded-xl p-6 border border-gray-200 pb-5">
                        <div class="flex justify-between items-center mb-4">
                            <div class="skeleton h-6 w-20 rounded-lg"></div>
                            <div class="skeleton h-4 w-24"></div>
                        </div>
                        <div class="skeleton h-6 w-full mb-2"></div>
                        <div class="skeleton h-6 w-3/4 mb-3"></div>

                        <div class="skeleton h-4 w-full mb-2"></div>
                        <div class="skeleton h-4 w-full mb-2"></div>
                        <div class="skeleton h-4 w-2/3 mb-4"></div>

                        <div class="flex justify-between items-center pt-4 border-t border-gray-100">
                            <div class="skeleton h-4 w-20"></div>
                            <div class="skeleton h-4 w-24"></div>
                        </div>
                    </article>
                }
            }
            else  
            {
                foreach (var post in recentPost.Items)
                {
                    <article class="bg-white rounded-xl p-6 border border-gray-200 hover:-translate-y-1 hover:shadow-xl hover:border-indigo-500 transition-all cursor-pointer group">
                        <div class="flex justify-between items-center mb-4">
                            <span class="bg-indigo-50 text-indigo-600 px-3 py-1.5 rounded-lg text-xs font-semibold uppercase tracking-wide">
                                @post.CategoryName
                            </span>
                            <span class="text-xs text-gray-500">@post.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                        <h3 class="text-lg line-clamp-2 font-bold mb-3 text-gray-800 leading-snug group-hover:text-indigo-600 transition-colors">
                            @post.Title
                        </h3>
                        <p class="text-gray-600 text-sm line-clamp-3 leading-relaxed mb-4 [&_*]:!text-sm">
                            @((MarkupString)post.Content!)
                        </p>
                        <div class="flex justify-between items-center pt-4 border-t border-gray-100">
                            <span class="text-xs text-gray-500 flex items-center gap-1">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                @post.readingDuration.GetDisplayName()
                            </span>
                            <NavLink href="@($"viewblogconstruct/{post.Id}")" class="text-indigo-600 font-semibold text-sm hover:gap-2 flex items-center gap-1 transition-all group-hover:underline">
                                Read more
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </NavLink>
                        </div>
                    </article>
                }
            }
          
        </div>
    </section>
</main>

<style>
    .hide-scrollbar::-webkit-scrollbar {
        display: none;
    }

    .hide-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>

@code {
    public bool hasrender = false;
    private UserProfileDto? userProfile { get; set; } = new UserProfileDto();
    private List<FeaturedPostDto>? featuredPosts { get; set; } = new List<FeaturedPostDto>();
    private PagedResult<PostDto>? recentPost { get; set; } = new PagedResult<PostDto>();
    private ListPublishedPostsRequest Pagination { get; set; } = new ListPublishedPostsRequest();
    private ElementReference carouselContainer;
    private int currentSlide = 0;

    protected override async Task OnInitializedAsync()
    {
        var request = await ClientService.GetCurrentUser();
        var feaatured = await PostClient.ListFeatured();
        var recent = await PostClient.ListPublished(Pagination);
        featuredPosts = feaatured.Value;
        recentPost = recent.Value;
        userProfile = request.Value;
        hasrender = true;
    }

    private async Task ScrollLeft()
    {
        await JS.InvokeVoidAsync("eval", $"document.querySelector('.hide-scrollbar').scrollBy({{ left: -window.innerWidth, behavior: 'smooth' }})");
        if (currentSlide > 0) currentSlide--;
    }

    private async Task ScrollRight()
    {
        await JS.InvokeVoidAsync("eval", $"document.querySelector('.hide-scrollbar').scrollBy({{ left: window.innerWidth, behavior: 'smooth' }})");
        if (currentSlide < featuredPosts.Count - 1) currentSlide++;
    }

    private async Task ScrollToSlide(int index)
    {
        await JS.InvokeVoidAsync("eval", $"document.querySelector('.hide-scrollbar').scrollTo({{ left: window.innerWidth * {index}, behavior: 'smooth' }})");
        currentSlide = index;
    }
}