@page "/approval"

<div class="h-screen bg-gray-50 py-8 px-4 overflow-auto">
    <div class="max-w-7xl mx-auto">
      
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Pending Approval</h1>
            <p class="text-gray-600">Review and approve blog posts before they go live</p>
        </div>


       
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900">Posts Awaiting Review</h2>
            </div>

            <div class="divide-y divide-gray-200">


                 @if (Pendings?.Items is null)
                {
                <div class="p-16 text-center">
                    <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-100 rounded-full mb-4">
                        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">No Pending Posts</h3>
                    <p class="text-gray-500 mb-6 max-w-md mx-auto">
                        All posts have been reviewed! There are currently no posts waiting for approval.
                    </p>
                    <div class="flex gap-3 justify-center">
                        <button class="px-4 py-2 bg-indigo-500 text-white text-sm font-medium rounded-lg hover:bg-indigo-600 transition-colors">
                            View All Posts
                        </button>
                        <button @onclick="ListByPending" class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors">
                            Refresh
                        </button>
                    </div>
                </div>

                  
                }
                else if (!Pendings.Items.Any())
                {

                @for (int i = 0; i < 3; i++)
                {
                    <div class="p-6 animate-pulse">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-2">
                                    <div class="h-5 bg-gray-200 rounded-full w-20"></div>
                                    <div class="h-4 bg-gray-200 rounded w-32"></div>
                                </div>
                                <div class="h-6 bg-gray-200 rounded w-3/4 mb-2"></div>
                                <div class="h-4 bg-gray-200 rounded w-full mb-1"></div>
                                <div class="h-4 bg-gray-200 rounded w-5/6 mb-3"></div>
                                <div class="flex items-center gap-4">
                                    <div class="h-4 bg-gray-200 rounded w-24"></div>
                                    <div class="h-4 bg-gray-200 rounded w-28"></div>
                                </div>
                            </div>
                            <div class="flex flex-col gap-2 ml-4">
                                <div class="h-10 bg-gray-200 rounded-lg w-24"></div>
                                <div class="h-10 bg-gray-200 rounded-lg w-24"></div>
                                <div class="h-10 bg-gray-200 rounded-lg w-24"></div>
                            </div>
                        </div>
                    </div>
                }
                }
                else
                {
                    foreach (var pending in Pendings.Items)
                    {
                
                        <div class="p-6 hover:bg-gray-50 transition-colors">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center gap-2 mb-2">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            @pending.CategoryName
                                        </span>
                                        <!--  <span class="text-sm text-gray-500">Submitted 2 hours ago</span>-->
                                        <span class="text-sm text-gray-500">@pending.CreatedAt</span>
                                    </div>
                                    <h3 class="text-lg font-semibold text-gray-900 mb-2">
                                        @pending.Title
                                    </h3>

                                    <div class="prose prose-sm max-w-none line-clamp-1 mb-3 text-gray-600 [&_*]:!text-sm">
                                        @((MarkupString)pending.Content!)
                                    </div>

                                    <div class="flex items-center gap-4 text-sm text-gray-500">
                                        <span class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                            @pending.Author
                                        </span>
                                        <span class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            @pending.readingDuration.GetDisplayName();
                                        </span>
                                    </div>
                                </div>
                                <div class="flex flex-col gap-2 ml-4">
                                    <button class=" cursor-pointer px-4 py-2 bg-indigo-500 text-white text-sm font-medium rounded-lg hover:bg-indigo-700  transition-colors">
                                        Approve
                                    </button>
                                    <button class="bg-gray-100 cursor-pointer  px-4 py-2  text-indigo-500 text-sm font-medium rounded-lg hover:bg-indigo-500 hover:text-white transition-colors">
                                        Reject
                                    </button>
                                    <button class="cursor-pointer  px-4 py-2 bg-gray-200 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-300 transition-colors">
                                        Preview
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</div>

@code {

    private PagedResult<PostDto>? Pendings { get; set; } = new PagedResult<PostDto>();
    private ListPaginatedRequest PaginationPending { get; set; } = new ListPaginatedRequest { PageNumber = 1, PageSize = 10 };

    protected override async Task OnInitializedAsync()
    {
        await ListByPending();
    }

    public async Task ListByPending()
    {
        var request = await PostClient.ListByPending(PaginationPending);
        Pendings = request.Value;
    }
}