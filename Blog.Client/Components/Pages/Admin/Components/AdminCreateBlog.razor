    private void HandlingQuery()
    {
        var query = SearchQuery.ToLower();
        if (!string.IsNullOrEmpty(query))
        {
            FilteredTag = Result<List<TagDto>>.Success(ListTag!.Value!.Where(s => s.Name!.ToLower().Contains(query)).ToList());
        }
        else
        {
            FilteredTag = ListTag;
        }

    }

 
