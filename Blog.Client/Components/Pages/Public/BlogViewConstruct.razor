@page "/viewblogconstruct/{PostId:int}"


<div class="h-screen bg-gray-50 py-8 overflow-auto">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">

        @if (PostDto is null)
        {

            <article class="bg-white rounded-2xl shadow-sm overflow-hidden mb-8">


                <div class="px-8 pt-8">
                    <div class="skeleton h-6 w-24 rounded-full"></div>
                </div>


                <div class="px-8 pt-4 pb-6">
                    <div class="skeleton h-10 w-full mb-3"></div>
                    <div class="skeleton h-10 w-3/4 mb-4"></div>

                    <div class="flex flex-wrap items-center gap-6">
                        <div class="skeleton h-4 w-32"></div>
                        <div class="skeleton h-4 w-40"></div>
                        <div class="skeleton h-4 w-24"></div>
                    </div>
                </div>


                <div class="w-full h-96">
                    <div class="skeleton w-full h-full"></div>
                </div>


                <div class="px-8 py-6 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-4">
                            <div class="skeleton h-10 w-24 rounded-lg"></div>
                            <div class="skeleton h-10 w-24 rounded-lg"></div>
                        </div>
                        <div class="skeleton h-10 w-10 rounded-lg"></div>
                    </div>
                </div>


                <div class="px-8 py-8">
                    <div class="space-y-3 mb-6">
                        <div class="skeleton h-4 w-full"></div>
                        <div class="skeleton h-4 w-full"></div>
                        <div class="skeleton h-4 w-full"></div>
                        <div class="skeleton h-4 w-5/6"></div>
                        <div class="skeleton h-4 w-full"></div>
                        <div class="skeleton h-4 w-full"></div>
                        <div class="skeleton h-4 w-4/5"></div>
                        <div class="skeleton h-4 w-full"></div>
                        <div class="skeleton h-4 w-full"></div>
                        <div class="skeleton h-4 w-3/4"></div>
                    </div>


                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <div class="flex flex-wrap gap-2">
                            <div class="skeleton h-8 w-20 rounded-md"></div>
                            <div class="skeleton h-8 w-24 rounded-md"></div>
                            <div class="skeleton h-8 w-28 rounded-md"></div>
                            <div class="skeleton h-8 w-32 rounded-md"></div>
                        </div>
                    </div>
                </div>
            </article>


            <div class="bg-white rounded-2xl shadow-sm overflow-hidden p-8">
                <div class="flex items-center gap-2 mb-6">
                    <div class="skeleton h-6 w-6 rounded"></div>
                    <div class="skeleton h-8 w-40"></div>
                </div>


                <div class="space-y-6">
                    @for (int i = 0; i < 3; i++)
                    {
                        <div class="flex gap-4">
                            <div class="skeleton h-10 w-10 rounded-full flex-shrink-0"></div>
                            <div class="flex-1">
                                <div class="bg-gray-50 rounded-lg p-4">
                                    <div class="flex items-center justify-between mb-2">
                                        <div class="skeleton h-5 w-32"></div>
                                        <div class="skeleton h-4 w-24"></div>
                                    </div>
                                    <div class="skeleton h-4 w-full mb-2"></div>
                                    <div class="skeleton h-4 w-3/4"></div>
                                </div>
                                <div class="mt-2 flex items-center gap-4">
                                    <div class="skeleton h-4 w-16"></div>
                                    <div class="skeleton h-4 w-16"></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>


                <div class="mt-8">
                    <div class="flex gap-4">
                        <div class="skeleton h-10 w-10 rounded-full flex-shrink-0"></div>
                        <div class="flex-1">
                            <div class="skeleton h-24 w-full rounded-lg mb-3"></div>
                            <div class="flex justify-end">
                                <div class="skeleton h-10 w-32 rounded-lg"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {

            <article class="bg-white rounded-2xl shadow-sm overflow-hidden mb-8">

                <div class="px-8 pt-8">
                    <span class="inline-block bg-indigo-100 text-indigo-600 px-3 py-1 rounded-full text-sm font-semibold">
                        @PostDto.CategoryName
                    </span>
                </div>


                <div class="px-8 pt-4 pb-6">
                    <h1 class="text-4xl font-bold text-gray-900 mb-4 leading-tight">
                        @PostDto.Title
                    </h1>


                    <div class="flex flex-wrap items-center gap-6 text-sm text-gray-600">
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span>@PostDto.Author</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <span>@PostDto.PostCreatedAt.ToString("MMMM dd, yyyy")</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span>@PostDto.readingDuration.GetDisplayName()</span>
                        </div>
                    </div>
                </div>


                @if (Preview is not null)
                {
                    <div class="w-full h-96 overflow-hidden">
                        <img src="@Preview" class="w-full h-full object-cover" />
                    </div>
                }


                <div class="px-8 py-6 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-4">
                            <button @onclick="HandlePostLike"
                                    class="flex items-center gap-2 px-4 cursor-pointer py-2 rounded-lg transition-colors @(PostDto.PhotoIsliked ? "bg-red-50 text-red-600" : "bg-gray-100 text-gray-600 hover:bg-gray-200")">
                                <svg class="w-5 h-5 @(PostDto.PhotoIsliked ? "fill-current" : "")" fill="@(PostDto.PhotoIsliked ? "currentColor" : "none")" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                                <span class="font-semibold">@PostDto.PostLike</span>
                            </button>

                            <button class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-100 text-gray-600 hover:bg-gray-200 transition-colors">
                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                                </svg>
                                <span class="font-semibold">Share</span>
                            </button>
                        </div>

                        <button @onclick="() => HandleBookMark()"
                                class="p-2 cursor-pointer rounded-lg transition-colors @(PostDto.IsBookMark ? "bg-indigo-50 text-indigo-600" : "bg-gray-100 text-gray-600 hover:bg-gray-200")">
                            <svg class="w-5 h-5 @(PostDto.IsBookMark ? "fill-current" : "")" fill="@(PostDto.IsBookMark ? "currentColor" : "none")" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                            </svg>
                        </button>
                    </div>
                </div>


                <div class="px-8 py-8">
                    <div class="blog-content">
                        @((MarkupString)PostDto.Content!)
                    </div>


                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <div class="flex flex-wrap gap-2">
                            @if (PostDto.Tags is not null)
                            {
                                @foreach (var tag in PostDto.Tags)
                                {
                                    <span class="bg-gray-200 px-3 py-1.5 rounded-md text-sm font-medium cursor-pointer hover:bg-gray-300 transition-colors">
                                        @tag.Name
                                    </span>
                                }
                            }
                        </div>
                    </div>
                </div>
            </article>


            <div class="bg-white rounded-2xl shadow-sm overflow-hidden p-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-2">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                    Comments (@PostDto.CommentCount)
                </h2>

                <div class="space-y-6">
                    @foreach (var comment in PostDto.Comments)
                    {
                        <div class="flex gap-4">
                            <div class="flex-shrink-0">
                                <div class="w-10 h-10 rounded-full overflow-hidden flex items-center justify-center">
                                    <img src="@comment.PhotoUrl" alt="User photo" class="w-full h-full object-cover" />
                                </div>
                            </div>
                            <div class="flex-1">
                                <div class="bg-gray-50 rounded-lg p-4">
                                    <div class="flex items-center justify-between mb-2">
                                        <h4 class="font-semibold text-gray-900">@comment.UserName</h4>
                                        <span class="text-sm text-gray-500">@comment.CreatedAt</span>
                                    </div>
                                    <p class="text-gray-700 leading-relaxed">@comment.Content</p>
                                </div>
                                <div class="mt-2 flex items-center gap-4 text-sm">
                                    <div @onclick="() => GetCommentId(comment.CommentId)" class="@(comment.IsLikedComment ? "text-indigo-600" : "text-gray-600") btn flex items-center gap-1  hover:text-indigo-600 transition-colors cursor-pointer">
                                        <svg class="w-4 h-4 " fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                                        </svg>
                                        <span>@comment.LikeCount</span>
                                    </div>
                                    <button class="text-gray-600 hover:text-indigo-600 transition-colors">Reply</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-8">
                    <EditForm Model="@addCommentRequest" OnValidSubmit="HandleSubmitComment" FormName="AddComment">
                        <div class="flex gap-4">
                            <div class="flex-shrink-0">
                                <div class="w-10 h-10 rounded-full bg-indigo-500 flex items-center justify-center text-white font-semibold">
                                    YO
                                </div>
                            </div>
                            <div class="flex-1">
                                <InputTextArea @bind-Value="addCommentRequest.Content"
                                               placeholder="Add a comment..."
                                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none"
                                               rows="3" />
                                <div class="mt-3 flex justify-end">
                                    <button type="submit"
                                            class="px-6 py-2 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition-colors">
                                        Post Comment
                                    </button>
                                </div>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        }
    </div>
</div>


@code {
    [Parameter]
    public int PostId { get; set; }

    private PostDetailDto? PostDto;
    private bool hasrender = false;
    public string? Preview { get; set; }
    private int CommentId { get; set; }
    private bool isLiked = false;
    private bool commentisliked = false;

    private GetPostRequest postRequest { get; set; } = new GetPostRequest();
    private ToggleCommentLikeRequest toggleCommentLikeRequest { get; set; } = new ToggleCommentLikeRequest();
    private AddCommentRequest addCommentRequest { get; set; } = new AddCommentRequest();
    private AddBookMarkRequest addBookMarkRequest { get; set; } = new AddBookMarkRequest();
    private TogglePostLikeRequest togglePostLikeRequest { get; set; } = new TogglePostLikeRequest();
    private bool islike { get; set; }

    protected override async Task OnAfterRenderAsync(bool first)
    {
        if (!hasrender && first)
        {
            hasrender = true;
            postRequest.PostId = PostId;
            addBookMarkRequest.PostId = PostId;
            togglePostLikeRequest.PostId = PostId;

            var result = await PostClient.Get(postRequest);
            PostDto = result.Value;

            if (PostDto?.Photo is not null)
            {
                Preview = $"data:{PostDto.PhotoContent};base64,{Convert.ToBase64String(PostDto.Photo)}";
            }
        }
        StateHasChanged();
    }

    private async Task HandleSubmitComment()
    {
        addCommentRequest.PostId = PostId;
        var request_comment = await PostClient.AddComment(addCommentRequest);
        var result = await PostClient.Get(postRequest);
        PostDto = result.Value;
        addCommentRequest = new AddCommentRequest();
        StateHasChanged();
    }

    public async Task GetCommentId(int commentId)
    {
        toggleCommentLikeRequest.CommentId = commentId;
        await PostClient.ToggleLikeComment(toggleCommentLikeRequest);
        var result = await PostClient.Get(postRequest);
        PostDto = result.Value;
        StateHasChanged();
    }

    private async Task HandlePostLike()
    {
        var request = await PostClient.ToggleLikePost(togglePostLikeRequest);
        var result = await PostClient.Get(postRequest);
        PostDto = result.Value;
        StateHasChanged();
    }

    public async Task HandleBookMark()
    {
        var request = await PostClient.AddBookMark(addBookMarkRequest);
        var result = await PostClient.Get(postRequest);
        PostDto = result.Value;
        StateHasChanged();
    }
}