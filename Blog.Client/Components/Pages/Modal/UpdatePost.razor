        }
    }

    private async Task HandleUpdate()
    {
        isSaving = true;

        var updateResult = await PostClient.Update(updatePost);

        if (updateResult?.IsSuccess == true)
        {

            if (selectedCategoryId.HasValue && updatePost.PostId > 0)
            {
                var linkReq = new LinkCategoryRequest { PostId = updatePost.PostId, CategoryId = selectedCategoryId.Value };
                _ = await CategoryClient.Link(linkReq);
            }


            if (selectedTags.Any() && updatePost.PostId > 0)
            {
                foreach (var tagId in selectedTags)
                {
                    var tagReq = new AddTagsToPostRequest { PostId = updatePost.PostId, Tagid = tagId };
                    _ = await TagClient.AddTagsToPost(tagReq);
                }
            }

        }
        await Refresh.InvokeAsync();     
        await JS.InvokeVoidAsync("eval", "document.getElementById('update_post').checked = false");
        isSaving = false;
        StateHasChanged();
    }


    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file?.Size > 10485760) return;

        using var stream = file!.OpenReadStream(maxAllowedSize: 10485760);
        using var memoryStream = new MemoryStream();
        await stream.CopyToAsync(memoryStream);

        updatePost.Photo = memoryStream.ToArray();
        updatePost.PhotoContent = file.ContentType;

        var base64 = Convert.ToBase64String(updatePost.Photo);
        previewImageUrl = $"data:{file.ContentType};base64,{base64}";

        StateHasChanged();
    }

