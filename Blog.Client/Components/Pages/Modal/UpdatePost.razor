@*

<input type="checkbox" id="update_post" class="modal-toggle" />
<div class="modal" role="dialog">
    <div class="modal-box max-w-7xl h-screen shadow-lg border border-indigo-100/50 overflow-hidden">
        <div class="h-screen overflow-auto bg-gradient-to-br  shadow-lg border border-indigo-100/50 from-slate-50 via-blue-50 to-indigo-50">
            <div class=" mx-auto px-4 sm:px-6 lg:px-8 py-8">

                @if (isLoading)
                {
                    <div class="flex items-center justify-center h-screen">
                        <div class="text-center">
                            <div class="relative">
                                <div class="inline-block animate-spin rounded-full h-16 w-16 border-4 border-indigo-200 border-t-indigo-600"></div>
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <svg class="w-8 h-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                </div>
                            </div>
                            <p class="mt-6 text-lg font-medium text-gray-700">Loading editor...</p>
                            <p class="mt-2 text-sm text-gray-500">Preparing your workspace</p>
                        </div>
                    </div>
                }
                else
                {

                    <div class="mb-8 bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-indigo-100/50 p-5">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-4">
                                <div class="relative">
                                    <div class="w-14 h-14 bg-gradient-to-br from-indigo-500 to-purple-500  rounded-2xl flex items-center justify-center shadow-xl">
                                        <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </div>
                                </div>
                               
                                    <h1 class="text-2xl font-bold  text-gray-700">Edit Post</h1>
                                    <p class="text-gray-600 mt-1">Edit and update your content</p>
                                
                            </div>
                            <label for="update_post" class="group w-11 h-11 flex items-center justify-center rounded-xl hover:bg-gray-100 text-gray-400 hover:text-gray-900 transition-all duration-200 border border-gray-200 hover:border-gray-300 hover:shadow-md cursor-pointer">
                                <svg class="w-5 h-5 transition-transform group-hover:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </label>
                        </div>
                    </div>

                    <EditForm Model="@updatePost" OnValidSubmit="HandleUpdate" FormName="UpdateBlog">
                        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">


                            <div class="lg:col-span-2 space-y-6">


                                <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-indigo-100/50 p-6 hover:shadow-xl transition-all duration-300">
                                    <div class="flex items-center gap-2 mb-4">
                                        <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-lg flex items-center justify-center">
                                            <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                                            </svg>
                                        </div>
                                        <label class="text-sm font-semibold text-gray-900">Post Title</label>
                                        <span class="text-red-500 text-lg">*</span>
                                    </div>
                                    <InputText @bind-Value="updatePost.Title"
                                               placeholder="Write a compelling title..."
                                               class="w-full px-4 py-3.5 text-lg border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 placeholder:text-gray-400 bg-gray-50 hover:bg-white" />
                                </div>


                                <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-indigo-100/50 p-6 hover:shadow-xl transition-all duration-300">
                                    <div class="flex items-center gap-2 mb-4">
                                        <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-lg flex items-center justify-center">
                                            <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                        </div>
                                        <label class="text-sm font-semibold text-gray-900">Featured Image</label>
                                    </div>

                                    @if (string.IsNullOrEmpty(previewImageUrl))
                                    {
                                        <div class="group relative border-2 border-dashed border-indigo-200 rounded-2xl p-12 text-center hover:border-indigo-400 hover:bg-gradient-to-br hover:from-indigo-50/50 hover:to-purple-50/50 transition-all duration-300 cursor-pointer bg-gradient-to-br from-gray-50 to-indigo-50/30">
                                            <InputFile OnChange="HandleImageUpload" class="hidden" id="imageUpload" accept="image/*" />
                                            <label for="imageUpload" class="cursor-pointer block">
                                                <div class="w-20 h-20 mx-auto mb-4 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg">
                                                    <svg class="w-10 h-10 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                    </svg>
                                                </div>
                                                <p class="text-gray-900 font-semibold mb-1">Click to upload</p>
                                                <p class="text-sm text-gray-500">PNG, JPG, GIF up to 10MB</p>
                                            </label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="relative group overflow-hidden rounded-2xl">
                                            <img src="@previewImageUrl" class="w-full h-80 object-cover transition-transform duration-300 group-hover:scale-105" alt="Featured" />
                                            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                                                <button type="button" @onclick="RemoveImage"
                                                        class="bg-indigo-600 text-white px-5 py-3 rounded-xl hover:bg-indigo-700 transition-all flex items-center gap-2 shadow-2xl font-semibold transform hover:scale-105">
                                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                    </svg>
                                                    Remove Image
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>


                                <div class="bg-white rounded-2xl shadow-sm border border-indigo-100 p-6 hover:shadow-md transition-shadow duration-200">
                                    <div class="flex items-center gap-2 mb-4">
                                        <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-lg flex items-center justify-center">
                                            <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                            </svg>
                                        </div>
                                        <label class="text-sm font-semibold text-gray-900">Content</label>
                                        <span class="text-red-500 text-lg">*</span>
                                    </div>

                                    @if (isEditorLoading)
                                    {

                                        <div class="w-full h-[500px] bg-white border-2 border-gray-200 rounded-xl p-4 space-y-3 relative">

                                            <div class="flex gap-2 pb-3 border-b border-gray-200">
                                                <div class="h-8 w-20 bg-gray-200 rounded animate-pulse"></div>
                                                <div class="h-8 w-24 bg-gray-200 rounded animate-pulse"></div>
                                                <div class="h-8 w-16 bg-gray-200 rounded animate-pulse"></div>
                                                <div class="h-8 w-8 bg-gray-200 rounded animate-pulse"></div>
                                                <div class="h-8 w-8 bg-gray-200 rounded animate-pulse"></div>
                                                <div class="h-8 w-8 bg-gray-200 rounded animate-pulse"></div>
                                            </div>


                                            <div class="space-y-3 pt-2">
                                                <div class="h-5 bg-gray-200 rounded animate-pulse w-3/4"></div>
                                                <div class="h-5 bg-gray-200 rounded animate-pulse w-full"></div>
                                                <div class="h-5 bg-gray-200 rounded animate-pulse w-5/6"></div>
                                                <div class="h-5 bg-gray-200 rounded animate-pulse w-4/5"></div>
                                                <div class="h-5 bg-gray-200 rounded animate-pulse w-full"></div>
                                                <div class="h-5 bg-gray-200 rounded animate-pulse w-2/3"></div>
                                                <div class="h-5 bg-gray-200 rounded animate-pulse w-5/6"></div>
                                                <div class="h-5 bg-gray-200 rounded animate-pulse w-3/4"></div>
                                                <div class="h-5 bg-gray-200 rounded animate-pulse w-4/5"></div>
                                            </div>


                                            <div class="absolute inset-0 flex items-center justify-center bg-white/80 backdrop-blur-sm rounded-xl">
                                                <div class="text-center">
                                                    <div class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-indigo-200 border-t-indigo-600 mb-3"></div>
                                                    <p class="text-sm text-gray-600 font-medium">Loading editor...</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {

                                        <div class="rounded-xl overflow-hidden shadow-sm border border-indigo-100">
                                            <Editor ApiKey="pfj9zo4978ac5u36pu475q5zttfik7j191xq1ktkjhgxi4ct"
                                                    @bind-Value="updatePost.Content"
                                                    Field="@(() => updatePost.Content)"
                                                    Conf="@editorConf" />
                                        </div>
                                    }
                                </div>
                            </div>


                            <div class="lg:col-span-1 space-y-6">

                                <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-indigo-100/50 p-6">
                                    <h3 class="text-lg font-bold text-gray-700 mb-4">Update Settings</h3>
                                    <div class="space-y-4">
                                        <div>
                                            <label class="block text-sm font-semibold text-gray-700 mb-2">Status</label>

                                            <InputSelect @bind-Value="updatePost.Status"
                                                         class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white font-medium">
                                                <option value="@EntityEnum.Status.Published"> Published</option>
                                                <option value="@EntityEnum.Status.Draft"> Draft</option>
                                            </InputSelect>
                                            </div>

                                        <div>
                                            <label class="block text-sm font-semibold text-gray-700 mb-2">Author</label>
                                                                               
                                            <InputText @bind-Value="updatePost.Author"
                                                       placeholder="Your name"
                                                       class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-gray-50 hover:bg-white" />
                                        </div>
                                        <div>
                                            <label class="block text-sm font-semibold text-gray-700 mb-2">Publish Date</label>
                                            <InputDate @bind-Value="PublishedDate"
                                                       class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-gray-50 hover:bg-white" />
                                        </div>
                                        <div>
                                            <label class="block text-sm font-semibold text-gray-700 mb-2">Reading Time</label>
                                            <InputSelect @bind-Value="updatePost.readingDuration"
                                                         class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-gray-50 hover:bg-white">
                                                <option value="@ReadingDuration.Minutes5">5 Minutes</option>
                                                <option value="@ReadingDuration.Minutes10">10 Minutes</option>
                                                <option value="@ReadingDuration.Minutes15">15 Minutes</option>
                                                <option value="@ReadingDuration.Minutes20">20 Minutes</option>
                                                <option value="@ReadingDuration.Minutes30">30 Minutes</option>
                                                <option value="@ReadingDuration.OneHour">1 Hour</option>
                                            </InputSelect>
                                        </div>
                                    </div>
                                </div>


                                <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-indigo-100/50 p-6">
                                    <h3 class="text-lg font-bold text-gray-700 mb-4">Category</h3>

                                    @if (selectedCategoryId.HasValue)
                                    {
                                        <div class="mb-4 p-3 bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl border-2 border-indigo-200">
                                            <div class="flex items-center justify-between">
                                                <span class="text-indigo-900 font-semibold">@GetCategoryNameById(selectedCategoryId.Value)</span>
                                                <button type="button" @onclick="ClearCategory" class="text-indigo-600 hover:text-indigo-900 hover:bg-indigo-200 rounded-lg p-1.5">
                                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                    </svg>
                                                </button>
                                            </div>
                                        </div>
                                    }

                                    <input type="text"
                                           @bind="CategorySearchQuery"
                                           @bind:event="oninput"
                                           @onkeyup="HandlingCategoryQuery"
                                           class="w-full px-4 py-3 mb-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-gray-50 hover:bg-white"
                                           placeholder="🔍 Search categories..." />

                                    <div class="max-h-48 overflow-y-auto space-y-2 mb-4">
                                        @if (!showNewCategory)
                                        {
                                            @if (FilteredCategory?.IsSuccess == true && FilteredCategory.Value != null)
                                            {
                                                @foreach (var category in FilteredCategory.Value.Where(c => c.Id != selectedCategoryId))
                                                {
                                                    <button type="button" @onclick="() => SelectCategory(category.Id)"
                                                            class="w-full px-4 py-2 text-left bg-gray-50 hover:bg-indigo-50 rounded-xl transition-all">
                                                        @category.Name
                                                    </button>
                                                }
                                            }
                                        }
                                    </div>

                                    @if (!showNewCategory)
                                    {
                                        <button type="button" @onclick="() => showNewCategory = true"
                                                class="w-full px-4 py-3 text-indigo-600 font-semibold hover:bg-indigo-50 rounded-xl transition-all border-2 border-indigo-200">
                                            + Create New Category
                                        </button>
                                    }
                                    else
                                    {
                                        <div class="space-y-3 p-4 bg-indigo-50 rounded-xl border-2 border-indigo-200">
                                            <InputText @bind-Value="newCategory"
                                                       placeholder="Enter category name"
                                                       class="w-full px-4 py-3 border-2 border-indigo-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-white" />
                                            @if (!string.IsNullOrEmpty(categoryError))
                                            {
                                                <p class="text-sm text-red-600">⚠️ @categoryError</p>
                                            }
                                            <div class="flex gap-2">
                                                <button type="button" @onclick="CreateCategory"
                                                        class="flex-1 px-4 py-3 bg-indigo-600 text-white rounded-xl font-semibold hover:bg-indigo-700">
                                                    Add
                                                </button>
                                                <button type="button" @onclick="() => { showNewCategory = false; newCategory = string.Empty; categoryError = string.Empty; }"
                                                        class="flex-1 px-4 py-3 bg-white text-gray-700 rounded-xl font-semibold hover:bg-gray-100 border-2 border-gray-200">
                                                    Cancel
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>


                                <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-indigo-100/50 p-6">
                                    <h3 class="text-lg font-bold text-gray-700 mb-4">Tags</h3>

                                    @if (selectedTags.Any())
                                    {
                                        <div class="flex flex-wrap gap-2 mb-4">
                                            @foreach (var tagId in selectedTags)
                                            {
                                                <span class="inline-flex items-center gap-2 bg-indigo-100 text-indigo-700 px-3 py-1 rounded-lg">
                                                    @GetTagNameById(tagId)
                                                    <button type="button" @onclick="() => RemoveTag(tagId)" class="hover:text-indigo-900">
                                                        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                        </svg>
                                                    </button>
                                                </span>
                                            }
                                        </div>
                                    }

                                    <input type="text"
                                           @bind="TagSearchQuery"
                                           @bind:event="oninput"
                                           @onkeyup="HandlingTagQuery"
                                           class="w-full px-4 py-3 mb-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-gray-50 hover:bg-white"
                                           placeholder="🔍 Search tags..." />

                                    <div class="max-h-48 overflow-y-auto space-y-2 mb-4">
                                        @if (!showNewTag)
                                        {
                                            @if (FilteredTag?.IsSuccess == true && FilteredTag.Value != null)
                                            {
                                                @foreach (var tag in FilteredTag.Value.Where(t => !selectedTags.Contains(t.Id)))
                                                {
                                                    <button type="button" @onclick="() => AddTag(tag.Id)"
                                                            class="w-full px-4 py-2 text-left bg-gray-50 hover:bg-indigo-50 rounded-xl transition-all">
                                                        @tag.Name
                                                    </button>
                                                }
                                            }
                                        }
                                    </div>

                                    @if (!showNewTag)
                                    {
                                        <button type="button" @onclick="() => showNewTag = true"
                                                class="w-full px-4 py-3 text-indigo-600 font-semibold hover:bg-indigo-50 rounded-xl transition-all border-2 border-indigo-200">
                                            + Create New Tag
                                        </button>
                                    }
                                    else
                                    {
                                        <div class="space-y-3 p-4 bg-indigo-50 rounded-xl border-2 border-indigo-200">
                                            <InputText @bind-Value="newTag"
                                                       placeholder="Enter tag name"
                                                       class="w-full px-4 py-3 border-2 border-indigo-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-white" />
                                            @if (!string.IsNullOrEmpty(tagError))
                                            {
                                                <p class="text-sm text-red-600">⚠️ @tagError</p>
                                            }
                                            <div class="flex gap-2">
                                                <button type="button" @onclick="CreateTag"
                                                        class="flex-1 px-4 py-3 bg-indigo-600 text-white rounded-xl font-semibold hover:bg-indigo-700">
                                                    Add
                                                </button>
                                                <button type="button" @onclick="() => { showNewTag = false; newTag = string.Empty; tagError = string.Empty; }"
                                                        class="flex-1 px-4 py-3 bg-white text-gray-700 rounded-xl font-semibold hover:bg-gray-100 border-2 border-gray-200">
                                                    Cancel
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <!-- Update Button -->
                                <button type="submit" disabled="@isSaving"
                                        class="w-full px-6 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-xl font-bold hover:from-indigo-700 hover:to-purple-700 transition-all duration-300 flex items-center justify-center gap-2 disabled:opacity-50 shadow-xl">
                                    @if (isSaving)
                                    {
                                        <div class="inline-block animate-spin rounded-full h-5 w-5 border-2 border-white border-t-transparent"></div>
                                        <span>Updating...</span>
                                    }
                                    else
                                    {
                                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                        </svg>
                                        <span>Update Post</span>
                                    }
                                </button>
                            </div>
                        </div>
                    </EditForm>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int? PostId { get; set; }
    [Parameter] public int? CategoryId { get; set; }
    [Parameter] public List<TagDto>? Tags { get; set; }
    [Parameter] public EventCallback<bool> Refresh { get; set; }
    [Parameter] public EventCallback LoadAll { get; set; }


    private DeleteTagToPostRequest deleteTag { get; set; } = new DeleteTagToPostRequest();
    private UpdatePostRequest updatePost = new();
    private int? selectedCategoryId;
    private List<int> selectedTags = new();
    private DateTime PublishedDate;


    private bool isLoading = true;
    private bool isSaving = false;
    private bool isEditorLoading = true;
    private bool showNewCategory = false;
    private bool showNewTag = false;
    private string previewImageUrl = string.Empty;


    private string CategorySearchQuery = string.Empty;
    private string TagSearchQuery = string.Empty;
    private string newCategory = string.Empty;
    private string newTag = string.Empty;
    private string categoryError = string.Empty;
    private string tagError = string.Empty;


    private Result<List<CategoryDto>>? ListCategory;
    private Result<List<CategoryDto>>? FilteredCategory;
    private Result<List<TagDto>>? ListTag;
    private Result<List<TagDto>>? FilteredTag;



    private Dictionary<string, object> editorConf = TinyMCEConfig.GetConfig();
    protected override async Task OnParametersSetAsync()
    {
        await InitializeComponent();
    }

    private async Task InitializeComponent()
    {
        isLoading = true;
        isEditorLoading = true;
        StateHasChanged();

        PublishedDate = DateTime.UtcNow.AddHours(8);

        if (PostId.HasValue)
        {
            await LoadPost();
        }

        isLoading = false;
        StateHasChanged();

        await Task.Delay(500);
        isEditorLoading = false;
        StateHasChanged();
    }
    private int? _prevPostId;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategoriesAndTags();
    }
    private async Task LoadCategoriesAndTags()
    {
        ListCategory = await CategoryClient.GetListing();
        ListTag = await TagClient.GetListing();
        FilteredCategory = ListCategory;
        FilteredTag = ListTag;
    }

    private async Task LoadPost()
    {
        var request = await PostClient.Get(new GetPostRequest { PostId = PostId });

        if (request?.Value == null) return;

        var post = request.Value;
        selectedCategoryId = CategoryId;

        updatePost = new UpdatePostRequest
        {
            PostId = post.PostId,
            Title = post.Title,
            Content = post.Content,
            Photo = post.Photo,
            PhotoContent = post.PhotoContent,
            Author = post.Author,
